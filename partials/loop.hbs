{{!loop template}}
{{#if posts}}
  {{#is "paged"}}
    {{pagination}}
  {{/is}}
{{/if}}
<section id="loop">
{{#if posts}}
  {{#foreach posts}}
    {{#if feature_image}}
      <article>
        <section class="image">
          <img src="{{img_url feature_image}}"/>
        </section>
        <section class="body">
          <header>
            <a class="no-underline" href="{{url absolute="true"}}"><h1 class="title-article">{{title}}</h1></a>
            {{#if tags}}
                <p>by <a href="{{@blog.url}}/about-me/"><b>{{author.name}}</b></a>, on {{date format="MMMM DD, YYYY"}} - {{tags separator=" & "}}</p>
              {{else}}
                <p>by <a href="{{@blog.url}}/about-me/"><b>{{author.name}}</b></a>, on {{date format="MMMM DD, YYYY"}}</p>
            {{/if}}
          </header>
          <section class="excerpt">
            <p>{{excerpt words="50"}}...</p>
          </section>
          <footer>
            <a href="{{url absolute="true"}}"><div class="ghostb">read</div></a>
          </footer>
        </section>
      </article>
    {{else}}
      <article>
        <header>
          <a class="no-underline" href="{{url absolute="true"}}"><h1>{{title}}</h1></a>
          {{#if tags}}
              <p>by <a href="{{@blog.url}}/about-me/"><b>{{author.name}}</b></a>, on {{date format="MMMM DD, YYYY"}} - {{tags separator=" & "}}</p>
            {{else}}
              <p>by <a href="{{@blog.url}}/about-me/"><b>{{author.name}}</b></a>, on {{date format="MMMM DD, YYYY"}}</p>
          {{/if}}
        </header>
        <section class="excerpt">
          <p>{{excerpt words="60"}}...</p>
        </section>
        <footer>
          <a href="{{url absolute="true"}}"><div class="ghostb">read</div></a>
        </footer>
      </article>
    {{/if}}
  {{/foreach}}
  {{else}}
    <section class="noposts">
    <h1>no posts yet!</h1>
    <p>bummer, <a href="{{@blog.url}}/ghost/">why not make one?</a></p>
{{/if}}
</section>
{{#if posts}}
  {{pagination}}
{{/if}}
