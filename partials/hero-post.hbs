{{#post}}
  {{#if feature_image}}
    {{#if featured}}
      <section id="site-hero" class="hero" data-parallax="scroll" data-image-src="{{img_url feature_image}}">
      {{else}}
      <section id="site-hero" class="hero-partial" data-parallax="scroll" data-image-src="{{img_url feature_image}}">
    {{/if}}
      <div class="wrapper">
        {{navigation}}
        <div class="title Container-Large">
          <h1>{{title}}</h1>
          {{#if meta_description}}
            <p>{{meta_description}}</p>
          {{/if}}
          {{#if featured}}
            <div class="arrow">
              <a href="#post"><img src="{{asset "images/arrow.png"}}"></a>
            </div>
          {{/if}}
        </div>
      </div>
    </section>
  {{else}}
    <section id="site-hero" class="hero-partial hero-noimage">
        {{navigation}}
        <div class="title Container-Large">
          <h1>{{title}}</h1>
          {{#if meta_description}}
            <p>{{meta_description}}</p>
          {{/if}}
        </div>
    </section>
  {{/if}}
{{/post}}
<script>
  $("#site-hero").AnchorSlide();
  $("#site-hero .title").centerThis();
</script>
