  {{!decide which type of hero to use}}
  {{#if @blog.cover_image}}
    {{#is "home"}}
      <section id="site-hero" data-parallax="scroll" data-image-src="{{@blog.cover_image}}">
      {{else}}
      <section id="site-hero" class="hero-partial" data-parallax="scroll" data-image-src="{{@blog.cover_image}}">
    {{/is}}
  {{else}}
    <section id="site-hero" class="hero-partial hero-noimage" data-parallax="scroll" data-image-src="{{@blog.cover_image}}">
  {{/if}}
    <div class="wrapper">
      {{navigation}}
      <div class="title Container-Large">
        {{#is "home"}}
          <h1>{{@blog.title}}</h1>
          <p>{{@blog.description}}</p>
          <div class="arrow">
            <a href="#down"><img src="{{asset "images/arrow.png"}}"></a>
          </div>
          {{else}}

        {{/is}}
      </div>
    </div>
  </section>
  <script>
    $("#site-hero").AnchorSlide();
    $("#site-hero .title").centerThis();
  </script>
